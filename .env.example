# ————— Core —————
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me-to-32+chars

# Database (Vercel Postgres)
DATABASE_URL=postgres://...
# SHADOW_DATABASE_URL=postgres://...  # optional for local migrations

# ————— Auth —————
# Google SSO (optional but recommended)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Magic link via Resend
AUTH_EMAIL_ENABLED=false
RESEND_API_KEY=
AUTH_EMAIL_FROM=noreply@example.com
# AUTH_EMAIL_SUBJECT=Your POP LMS magic link
# AUTH_EMAIL_RATE_LIMIT_WINDOW=600
# AUTH_EMAIL_RATE_LIMIT_MAX=5
# AUTH_EMAIL_TOKEN_MAX_AGE=600

# ————— Sanity —————
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2025-10-21
SANITY_READ_TOKEN=  # optional for drafts
# SANITY_PROJECT_ID=
# SANITY_DATASET=
# SANITY_STUDIO_BASE_URL=
# SANITY_STUDIO_URL=
# SANITY_STUDIO_PROJECT_ID=
# SANITY_STUDIO_DATASET=
# SANITY_STUDIO_API_VERSION=
# SANITY_DEV_CORS_ORIGINS=
# SANITY_MANAGEMENT_TOKEN=
# SANITY_MANAGE_TOKEN=
# SANITY_DEPLOY_STUDIO_TOKEN=
# NEXT_PUBLIC_SANITY_STUDIO_URL=

# ————— Video & Telemetry —————
NEXT_PUBLIC_VIDEO_PROVIDER_DEFAULT=youtube
NEXT_PUBLIC_TELEMETRY_DEBUG=0
LESSON_COMPLETE_PCT=0.92

# Cloudflare Stream (optional)
STREAM_ENABLED=false
STREAM_WEBHOOK_SECRET=

# ————— Analytics (PostHog) —————
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
POSTHOG_SERVER_KEY=

# ————— Org/Branding (optional) —————
DEFAULT_ORG_NAME=POP Initiative

# ————— Integrations (optional) —————
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ————— Logging —————
LOG_HEARTBEAT=0
