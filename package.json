{
  "name": "pop-lms",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "dev": "node scripts/ensure-sanity-cors.mjs && next dev",
    "build": "next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write --ignore-unknown .",
    "test": "node --test -r ./test.preload.cjs lib/__tests__/auth-adapter.test.cjs lib/lesson/__tests__/progress.test.cjs lib/lesson/__tests__/diagnostics.test.cjs lib/lesson/__tests__/engine.test.cjs lib/lesson/__tests__/augment.merge.test.cjs app/api/augment/__tests__/route.mock.test.cjs",
    "test:vitest": "vitest",
    "test:e2e": "playwright test",
    "check:routes": "node scripts/check-routes.mjs",
    "prisma:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && prisma db seed",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "sanity:cors": "node scripts/ensure-sanity-cors.mjs",
    "backfill:youtube": "tsx scripts/backfill-youtube.ts",
    "prepare": "husky"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@chakra-ui/next-js": "^2.4.4",
