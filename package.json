    "@sanity/client": "^7.12.0",
    "@sanity/image-url": "^1.2.0",
    "@sanity/vision": "^4.10.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.546.0",
    "next": "15.5.6",
    "next-auth": "5.0.0-beta.29",
    "next-sanity": "^11.5.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sanity": "^4.10.3",
    "styled-components": "^6.1.19",
